<div class="flex-1 basis-full sm:basis-[calc(50%-1.5rem)] md:basis-[calc(33.333%-1.5rem)] lg:basis-[calc(25%-1.5rem)] max-w-xs text-black bg-zinc-50 rounded-xl shadow-lg overflow-hidden">
    <a href="{{ path('yeti_edit', { id: yeti.id }) }}"
       class="absolute btn btn-blue bg-green-600 hover:bg-green-700 text-white text-sm font-bold py-1 px-2 m-2 rounded-lg shadow-md transition disabled:opacity-50">
        {{ "Edit"|trans }}
    </a>

    <div class="w-full h-80 bg-gray-100 flex items-center justify-center overflow-hidden">
        {% if yeti.image %}
            <img class="block w-full h-full object-cover" src="{{ asset('img/yeti/' ~ yeti.image) }}" alt="{{ yeti.name }}">
        {% else %}
            <img class="block w-full h-full object-cover" src="{{ asset('img/yeti/default.webp') }}" alt="{{ "Yetinder user"|trans }}">
        {% endif %}
    </div>
    <div class="px-6 py-4">
        <div class="font-bold text-xl text-center mb-2">{{ yeti.name }}</div>

        <p class="text-gray-700 text-base h-24 overflow-hidden text-ellipsis whitespace-pre-line line-clamp-4" onclick="this.classList.toggle('h-24');this.classList.toggle('line-clamp-4')">
            {{ yeti.description }}
        </p>
    </div>
    <div class="px-6 pt-4 pb-2">
        {% if yeti.height %}
            {% include 'components/cardParam.html.twig' with {
                'name': "Height"|trans,
                'value': yeti.height,
                'unit': "cm"
            } %}
        {% endif %}
        {% if yeti.weight %}
            {% include 'components/cardParam.html.twig' with {
                'name': "Weight"|trans,
                'value': yeti.weight,
                'unit': "kg"
            } %}
        {% endif %}
    </div>
    <div id="vote-{{ yeti.id }}" class="flex justify-center align-center gap-4 p-2">
        <a href="{{ path('yeti_vote_up', { id: yeti.id }) }}" class="bg-green-500 text-white px-3 py-1 rounded-full text-xl font-bold hover:bg-green-600">
            +
        </a>
        <span class="text-2xl font-semibold">{{ yeti.votes }}</span>
        <a href="{{ path('yeti_vote_down', { id: yeti.id }) }}" class="bg-red-500 text-white px-3 py-1 rounded-full text-xl font-bold hover:bg-red-600">
            â€“
        </a>
    </div>
</div>

