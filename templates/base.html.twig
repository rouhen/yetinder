<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{{ "Welcome to Yetinder"|trans }}{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body class="bg-gradient-to-r from-blue-800 to-purple-300 text-white min-h-screen">
        <nav class="bg-gray-800 shadow mb-6">
            <div class="max-w-7xl mx-auto px-1">
                <div class="flex items-center justify-between h-16">
                    <div class="flex items-center">
                        <a href="{{ path('yeti_dashboard') }}" class="text-white font-bold text-xl mr-2">
                            <img src="{{ asset('img/logo/yetinder-small.svg') }}" alt="Yetinder" class="inline-block w-12 h-12 mr-4">
                        </a>
                        <a href="{{ path('yeti_dashboard') }}" class="text-gray-300 hover:text-white px-4 py-2 rounded-md text-md font-medium">
                            {{ "Dashboard"|trans }}
                        </a>
                        <a href="{{ path('yeti_best_of') }}" class="text-gray-300 hover:text-white px-4 py-2 rounded-md text-md font-medium">
                            {{ "Best yetis"|trans }}
                        </a>
                        <a href="{{ path('yeti_vote') }}" class="text-gray-300 hover:text-white px-4 py-2 rounded-md text-md font-medium">
                            {{ "Vote"|trans }}
                        </a>
                        <a href="{{ path('yeti_create') }}" class="text-gray-300 hover:text-white px-4 py-2 rounded-md text-md font-medium">
                            {{ "Add new yeti"|trans }}
                        </a>
                    </div>

                    <ul class="language-switcher flex">
                        <li class="mr-2">
                            <a href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')|merge({'_locale': 'cs'})) }}">
                                <svg class="w-8 h-8" enable-background="new 0 0 512 512" viewBox="0 0 512 512" xmlns="http://www.w3.org/2000/svg"><circle cx="256" cy="256" fill="#f0f0f0" r="256"/><path d="m233.739 256s-158.609 181.055-158.759 181.019c46.326 46.327 110.327 74.981 181.02 74.981 141.384 0 256-114.616 256-256z" fill="#d80027"/><path d="m74.98 74.98c-99.974 99.974-99.974 262.065 0 362.04 41.313-41.313 81.046-81.046 181.02-181.02z" fill="#0052b4"/><g/><g/><g/><g/><g/><g/><g/><g/><g/><g/><g/><g/><g/><g/><g/></svg>
                            </a>
                        </li>
                        <li>
                            <a href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')|merge({'_locale': 'en'})) }}">
                                <svg class="w-8 h-8" enable-background="new 0 0 512 512" viewBox="0 0 512 512" xmlns="http://www.w3.org/2000/svg"><circle cx="256" cy="256" fill="#f0f0f0" r="256"/><g fill="#0052b4"><path d="m52.92 100.142c-20.109 26.163-35.272 56.318-44.101 89.077h133.178z"/><path d="m503.181 189.219c-8.829-32.758-23.993-62.913-44.101-89.076l-89.075 89.076z"/><path d="m8.819 322.784c8.83 32.758 23.993 62.913 44.101 89.075l89.074-89.075z"/><path d="m411.858 52.921c-26.163-20.109-56.317-35.272-89.076-44.102v133.177z"/><path d="m100.142 459.079c26.163 20.109 56.318 35.272 89.076 44.102v-133.176z"/><path d="m189.217 8.819c-32.758 8.83-62.913 23.993-89.075 44.101l89.075 89.075z"/><path d="m322.783 503.181c32.758-8.83 62.913-23.993 89.075-44.101l-89.075-89.075z"/><path d="m370.005 322.784 89.075 89.076c20.108-26.162 35.272-56.318 44.101-89.076z"/></g><g fill="#d80027"><path d="m509.833 222.609h-220.44-.001v-220.442c-10.931-1.423-22.075-2.167-33.392-2.167-11.319 0-22.461.744-33.391 2.167v220.44.001h-220.442c-1.423 10.931-2.167 22.075-2.167 33.392 0 11.319.744 22.461 2.167 33.391h220.44.001v220.442c10.931 1.423 22.073 2.167 33.392 2.167 11.317 0 22.461-.743 33.391-2.167v-220.44-.001h220.442c1.423-10.931 2.167-22.073 2.167-33.392 0-11.317-.744-22.461-2.167-33.391z"/><path d="m322.783 322.784 114.236 114.236c5.254-5.252 10.266-10.743 15.048-16.435l-97.802-97.802h-31.482z"/><path d="m189.217 322.784h-.002l-114.235 114.235c5.252 5.254 10.743 10.266 16.435 15.048l97.802-97.804z"/><path d="m189.217 189.219v-.002l-114.236-114.237c-5.254 5.252-10.266 10.743-15.048 16.435l97.803 97.803h31.481z"/><path d="m322.783 189.219 114.237-114.238c-5.252-5.254-10.743-10.266-16.435-15.047l-97.802 97.803z"/></g><g/><g/><g/><g/><g/><g/><g/><g/><g/><g/><g/><g/><g/><g/><g/></svg>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} my-4 px-4 py-3 rounded bg-green-100 text-green-800">
                    {{ message|trans }}
                </div>
            {% endfor %}
        {% endfor %}
        <main class="wrapper p-5 py-10">
            {% block body %}{% endblock %}
        </main>
    </body>
</html>
