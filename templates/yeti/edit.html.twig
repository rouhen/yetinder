{% extends 'base.html.twig' %}

{% block title %}
    {% if yeti.id %}
        {{ "Editing yeti"|trans }} - {{ yeti.name }}
    {% else %}
        {{ "New yeti"|trans }}
    {% endif %}
{% endblock %}

{% block body %}
    <h1 class="text-4xl text-white text-center font-bold mb-4">
        {% if yeti.id %}
            {{ "Editing yeti"|trans }}
        {% else %}
            {{ "New yeti"|trans }}
        {% endif %}
    </h1>

    <div class="flex flex-wrap gap-5 justify-center">
        <div class="w-full max-w-lg bg-white rounded-xl shadow-lg p-8">
            {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

            {{ form_row(form.name, {
                'label_attr': {
                    'class': 'block text-black font-bold mb-2'
                },
                'attr': {
                    'class': 'w-full border text-black border-gray-300 rounded-lg px-4 py-2 bg-white transition-colors focus:border-blue-500 focus:ring focus:ring-blue-100 hover:border-blue-400'
                }
            }) }}

            {{ form_row(form.description, {
                'label_attr': {
                    'class': 'block text-black font-bold mb-2'
                },
                'attr': {
                    'class': 'w-full border text-black border-gray-300 rounded-lg px-4 py-2 bg-white transition-colors focus:border-blue-500 focus:ring focus:ring-blue-100 hover:border-blue-400'
                }
            }) }}

            {{ form_row(form.imageFile, {
                'label_attr': {
                    'class': 'block text-black font-bold mb-2'
                },
                'attr': {
                    'class': 'w-full border text-black border-gray-300 rounded-lg px-4 py-2 bg-white transition-colors focus:border-blue-500 focus:ring focus:ring-blue-100 hover:border-blue-400'
                }
            }) }}

            {{ form_row(form.height, {
                'label_attr': {
                    'class': 'block text-black font-bold mb-2'
                },
                'attr': {
                    'class': 'w-full border text-black border-gray-300 rounded-lg px-4 py-2 bg-white transition-colors focus:border-blue-500 focus:ring focus:ring-blue-100 hover:border-blue-400'
                }
            }) }}

            {{ form_row(form.weight, {
                'label_attr': {
                    'class': 'block text-black font-bold mb-2'
                },
                'attr': {
                    'class': 'w-full border text-black border-gray-300 rounded-lg px-4 py-2 bg-white transition-colors focus:border-blue-500 focus:ring focus:ring-blue-100 hover:border-blue-400'
                }
            }) }}

            <div>
                <button type="submit"
                        class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-6 rounded-lg shadow-md transition">
                    {% if yeti.id %}
                        {{ "Save changes"|trans }}
                    {% else %}
                        {{ "Create yeti"|trans }}
                    {% endif %}
                </button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
