{% extends 'base.html.twig' %}

{% block title %}{{ "Yetinder dashboard"|trans }}{% endblock %}

{% block body %}
    <h1 class="text-4xl text-white text-center font-bold mb-4">{{ "Most wanted yetis"|trans }}</h1>

    <div class="flex mb-6 justify-end">
        <a href="{{ path('yeti_create') }}"
           class="btn btn-blue bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-6 rounded-lg shadow-md transition disabled:opacity-50">
            {{ "Add new yeti"|trans }}
        </a>
    </div>
    <div class="flex flex-wrap gap-5 justify-center">
        {% for yeti in yetis %}
            {% include 'components/card.html.twig' with {'yeti': yeti, 'index': loop.index} %}
        {% else %}
            <p class="text-2xl text-white text-center">{{ "No yetis found"|trans }}</p>
        {% endfor %}
    </div>
{% endblock %}
